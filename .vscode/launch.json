{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Daemon [Debug]",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceRoot}/sync.ts", "daemon"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      // "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Stop [Debug]",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceRoot}/sync.ts", "stop"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      // "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Start [Debug]",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceRoot}/sync.ts", "start"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      // "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "ts-node (Current File)",
      "type": "node",
      "request": "launch",
      "args": ["${relativeFile}"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      // "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
